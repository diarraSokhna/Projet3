<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Archetype Created Web Application</display-name>
  
    <filter>
	<filter-name>RestrictionFiltre</filter-name>
	<filter-class>fr.escalade_presentation.filtre.RestrictionFiltre</filter-class>
</filter>
<filter-mapping>
	<filter-name>RestrictionFiltre</filter-name>
	<url-pattern>/restreint/*</url-pattern>
	 <dispatcher>REQUEST</dispatcher>    
    <dispatcher>FORWARD</dispatcher> 
    <dispatcher>INCLUDE</dispatcher>
</filter-mapping>
  
  <servlet>
    <servlet-name>CreationTopo</servlet-name>
    <servlet-class>fr.escalade_presentation.controller.CreationTopo</servlet-class>
    <init-param>
      <param-name>chemin</param-name>
      <param-value>/fichiers/images/</param-value>
    </init-param>
    <multipart-config>
      <location>c:/fichiers/images</location>
      <max-file-size>2097152</max-file-size>
      <max-request-size>10485760</max-request-size>
      <file-size-threshold>1048576</file-size-threshold>
    </multipart-config>
  </servlet>
  <servlet>
    <servlet-name>Image</servlet-name>
    <servlet-class>fr.escalade_presentation.controller.Image</servlet-class>
    <init-param>
      <param-name>chemin</param-name>
      <param-value>/fichiers/images/</param-value>
    </init-param>
  </servlet>
  <servlet>
    <servlet-name>AjoutArticle</servlet-name>
    <servlet-class>fr.escalade_presentation.controller.AjoutArticle</servlet-class>
    <init-param>
      <param-name>chemin</param-name>
      <param-value>/fichiers/images/</param-value>
    </init-param>
    <multipart-config>
      <location>c:/fichiers/images</location>
      <max-file-size>2097152</max-file-size>
      <max-request-size>10485760</max-request-size>
      <file-size-threshold>1048576</file-size-threshold>
    </multipart-config>
  </servlet>
  <servlet>
    <servlet-name>AjoutSite</servlet-name>
    <servlet-class>fr.escalade_presentation.controller.AjoutSite</servlet-class>
    <init-param>
      <param-name>chemin</param-name>
      <param-value>/fichiers/images/</param-value>
    </init-param>
    <multipart-config>
      <location>c:/fichiers/images</location>
      <max-file-size>2097152</max-file-size>
      <max-request-size>10485760</max-request-size>
      <file-size-threshold>1048576</file-size-threshold>
    </multipart-config>
  </servlet>
  <servlet-mapping>
    <servlet-name>CreationTopo</servlet-name>
    <url-pattern>/CreationTopo</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AjoutArticle</servlet-name>
    <url-pattern>/AjoutArticle</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AjoutSite</servlet-name>
    <url-pattern>/AjoutSite</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Image</servlet-name>
    <url-pattern>/images/*</url-pattern>
  </servlet-mapping>
  

  
  <listener>
    <listener-class>fr.escalade.config.InitialisationDaoFactory</listener-class>
  </listener>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
</web-app>