<!--   </servlet-mapping> -->
  <servlet-mapping>
    <servlet-name>ListeTopo</servlet-name>
    <url-pattern>/ListeTopo</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CreationTopo</servlet-name>
    <url-pattern>/CreationTopo</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
		<servlet-name>Image</servlet-name>
		<url-pattern>/images/*</url-pattern>
	</servlet-mapping>
  <servlet-mapping>
    <servlet-name>Upload</servlet-name>
    <url-pattern>/Upload</url-pattern>
  </servlet-mapping>
  
  
      <resource-ref>
        <res-ref-name>jdbc/DB_ESCALADE</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

   
