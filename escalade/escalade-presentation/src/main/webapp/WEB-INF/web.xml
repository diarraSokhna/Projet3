<!--   </servlet> -->
  
  <servlet>
    <servlet-name>ListeTopo</servlet-name>
    <servlet-class>fr.escalade_presentation.controller.ListeTopo</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CreationTopo</servlet-name>
    <servlet-class>fr.escalade_presentation.controller.CreationTopo</servlet-class>
    <init-param>
      <param-name>chemin</param-name>
      <param-value>/fichiers/images/</param-value>
    </init-param>
    <multipart-config>
      <location>c:/fichiers/images</location>
      <max-file-size>2097152</max-file-size>
      <max-request-size>10485760</max-request-size>
      <file-size-threshold>1048576</file-size-threshold>
    </multipart-config>
  </servlet>
  <servlet>
		<servlet-name>Image</servlet-name>
		<servlet-class>fr.escalade_presentation.controller.Image</servlet-class>
		<init-param>
			<param-name>chemin</param-name> 
			<param-value>/fichiers/images/</param-value> 
		</init-param>
	</servlet>
  

  <servlet>
    <servlet-name>Upload</servlet-name>
    <servlet-class>fr.escalade_presentation.controller.Upload</servlet-class>
    <multipart-config>
      <location>c:/fichiers</location>
      <max-file-size>10485760</max-file-size>
      <max-request-size>52428800</max-request-size>
      <file-size-threshold>1048576</file-size-threshold>
    </multipart-config>
  </servlet>
 
  <servlet-mapping>
    <servlet-name>Accueil</servlet-name>
    <url-pattern>/accueil</url-pattern>
  </servlet-mapping>
<!--   <servlet-mapping> -->
